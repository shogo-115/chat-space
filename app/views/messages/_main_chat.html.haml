.Chat-main
  .group-info
    .group-info__group
      .group-info__group__group-name
        = @group.name
      %ul.group-info__group__member-list
        Memberï¼š 
        %li.group-info__group__member
          - @group.users.each do |user|
            = user.name
            
    .group-info__exit
      = link_to edit_group_path(@group) do
        Edit
  .message-field
    = render @messages

  .message-form
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .form__contents
        = f.text_field :content, class: 'form__input-content', placeholder: 'type a message'
        = f.label :image, class: 'form__input-image' do
          = icon('far', 'image')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'
